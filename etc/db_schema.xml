<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magentoese_data_installer_recurring">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
         <column xsi:type="varchar" name="module_name" nullable="false" length="255" comment="Module Name"/>
        <column xsi:type="int" name="is_installed" padding="10" unsigned="true" nullable="false" comment="Recurring elements installed"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>