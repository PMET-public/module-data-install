<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">ai_form.ai_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Genereate Products</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">ai_form</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="MagentoEse\DataInstall\Block\Adminhtml\Form\GenerateProductsButton"/>
            <button name="back" class="MagentoEse\DataInstall\Block\Adminhtml\Form\BackButton"/>
        </buttons>
        <deps>
            <dep>ai_form.ai_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="ai_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="name" xsi:type="string">ai_form_data_source</argument>
            <argument name="class" xsi:type="string">MagentoEse\DataInstall\Ui\Component\Form\DataProvider</argument>
            <argument name="primaryFieldName" xsi:type="string">file_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/generate"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
       <fieldset name="aiproductgeneration" sortOrder="40">
        <settings>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <label translate="true">AI Product Generation</label>
        </settings>
        <field name="is_fictional" formElement="checkbox" sortOrder="30">
            <settings>
                <label translate="true">Real Products</label>
                <tooltip>
                    <description translate="true">
                        If turned on you may get the names and desciptions of actual products
                    </description>
                </tooltip>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>toggle</prefer>
                        <valueMap>
                            <map name="false" xsi:type="string">fictional</map>
                            <map name="true" xsi:type="string"></map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="prompt" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">vertical</item>
                    <item name="label" xsi:type="string" translate="true">Prompt</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Prompt used to generate Products
                    </item>
                </item>
            </argument>
        </field>
        <field name="numberOfProducts" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">vertical</item>
                    <item name="label" xsi:type="string" translate="true">Qty</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="notice" xsi:type="string" translate="true">
                       Number of products to generate
                    </item>
                </item>
            </argument>
        </field>  
    </fieldset>
</form>